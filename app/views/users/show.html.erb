<% title @user.username+"â€™s Profile" %>

<%= render :partial => '/images/content_top' %>

<div class="content_bottom">
	
	<h2><%= @user.username %>	
	
	<% if @user.website  && @user.website != ''		%>
		<%if @user.website.match /^http:.*/ %>
		<%= link_to @user.website[0..50], @user.website %>
		<%else%>
		<%= link_to @user.website[0..50], 'http://'+ @user.website %>
		<%end%>		
	<%end%>

	</h2>

	<% if @user.about  %><p style="width: 300px"><%= @user.about %></p><% end %>

	<h3 style="margin-top: 50px">All Submissions by <%= @user.username %></h3>


	<ul class="last_submissions clearfix">
		<% for entry in @entries %>
			<li>
				<% if entry.images.size != 0 %>
				<%= link_to image_tag(entry.images.last.image.url(:small)), "/timeline#id="+entry.images.last.id.to_s%>
				<% end %>
			</li>	
		<% end %>
	</ul>
	

	
</div>



