<html>
  <head>
    <title><%= h(yield(:title) || "Digital Whispers") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= yield(:head) %>

	<link rel="alternate" type="application/rss+xml" title="All Uploads" href="/images/timeline.rss" />
	<link rel="shortcut icon" href="favicon.ico" />
	
	<script src="http://www.google.com/jsapi"></script>
	<script type="text/javascript" src="/javascripts/swfobject.js"></script>
	
	<script>
		// google.load("prototype", "1.6.1.0");
		// google.load("scriptaculous", "1.8.2");
		google.load("jquery", "1.3.2");
	</script>
	
	<%= javascript_include_tag 'application', 'jquery.ba-url.min', 'jquery.jcarousel.min' %>
	


  </head>
  <body>
  
		<script type="text/javascript">

		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-16666513-1']);
		  _gaq.push(['_trackPageview']);

		  (function() {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();

		</script>

		<div id="flashTimeline"></div>

		<div class="header clearfix">
		
			<h1 class="dw_logo"><a href="/">Digital Whispers</a></h1>
		
			<ul class="nav_main clearfix nav_left" style="float: left; position: relative; margin-left: -20px">
				
				<li><span>Whisper</span>
					<ul>
						<li><%= link_to "Take Webcam Image", "/timeline/webcam"%></li>
						<li><%= link_to "Draw a new Image", "/timeline/draw"%></li>
						<li><%= link_to "Upload Local File", new_image_path%></li>
					</ul>
				</li>
				<li><a href="/timeline">Witness</a></li>
			</ul>
		
			<ul class="nav_main clearfix">
					<!-- <li><%= link_to "Upload", new_image_path %></li> -->
					<li><%= link_to "About", "/page/about" %></li>
				<% if current_user %>
					<li><%= link_to "Edit Profile", edit_user_path(:current) %></li>
					<li><%= link_to "Logout", logout_path %></li>
					<li class="user">Logged in as <%= link_to current_user.username, "/users/"+current_user.username %></li>
				<% else %>
					<li><%= link_to "Register", new_user_path %></li>
					<li><%= link_to "Login", login_path %></li>
				<% end %>	
					
			</ul>
		
		</div>

		<div id="wrapper">
			
			<% flash.each do |name, msg| -%>
        		<%= content_tag :div, msg, :id => "flash_#{name}" %>
      		<% end %>
		
			
		
			<%= yield %>
		


